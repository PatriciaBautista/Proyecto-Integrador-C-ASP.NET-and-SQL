@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio de sesión | WENDY</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div id="layoutAuthentication" class="bg-light">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="mb-lg-5"></div>
                        <div class="mb-lg-5"></div>
                        <div class="col-lg-5 mb-lg-4">
                            <div class="card shadow-lg border-0 rounded-lg mt-5 position-fixed">
                                <div class="card-header bg-danger bg-opacity-75">
                                    <h3 class="text-center font-weight-light my-4">WENDY | INICIO DE SESION</h3>
                                </div>
                                <div class="card-body">
                                    <form action="@Url.Action("Login","Acceso")" method="post" onsubmit="return validateForm()">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="correo" id="correo" type="email" autocomplete="off" />
                                            <label for="inputEmail">Correo electrónico</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="clave" id="clave" type="password" />
                                            <label for="inputPassword">Contraseña</label>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button type="submit" class="btn btn-primary">Acceder</button>
                                        </div>
                                        @if (!string.IsNullOrEmpty(ViewBag.Error))
                                        {
                                            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                                        }
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Proyecto Wendy | Grupo 05</div>
                        <div></div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script>
        function validateForm() {
            var correo = document.getElementById("correo").value;
            var clave = document.getElementById("clave").value;

            if (correo.trim() === "" || clave.trim() === "") {
                alert("Por favor, complete todos los campos.");
                return false; // Evita enviar el formulario si los campos están vacíos.
            }
        }
    </script>
</body>
</html>
