@model Grupo05_ProyectoWendy.Entidades.DatosCompletosEmpleado

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form action=" /DatosCompletos/PDF" method="post">
    <div class="card-body">
        <div class="card-header">
            Generar el reporte | WENDY <i class="fas fa-user-circle"></i>
        </div>
        <hr />
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Identificador:</label>
                        <input type="text" class="form-control" name="Identificador" value="@Model.identificadorPersonal" readonly>
                    </div>
                    <div class="form-group">
                        <label>Nombre:</label>
                        <input type="text" class="form-control" name="nombre" value="@Model.nombreEmpleado" readonly>
                    </div>
                    <div class="form-group">
                        <label>Cargo:</label>
                        <input type="text" class="form-control" name="cargo" value="@Model.cargoEmpleado" readonly>
                    </div>
                    <div class="form-group">
                        <label>Monto:</label>
                        <input type="text" class="form-control" name="monto" value="@Model.monto" readonly>
                    </div>
                    <div class="form-group">
                        <label>Edad:</label>
                        <input type="text" class="form-control" name="edad" value="@Model.edadEmpleado" readonly>
                    </div>

                    <div class="form-group">
                        <label>País:</label>
                        <input type="text" class="form-control" name="pais" value="@Model.paisEmpleado" readonly>
                    </div>
                </div>
                @* Segunda columna *@
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Sucursal:</label>
                        <input type="text" class="form-control" name="sucursal" value="@Model.sucursalEmpleado" readonly>
                    </div>
                    <div class="form-group">
                        <label>Estado:</label>
                        <input type="text" class="form-control" name="estado" value="@Model.estado" readonly>
                    </div>
                    <div class="form-group">
                        <label>Fecha ingreso:</label>
                        <input type="text" class="form-control" name="fechaIngreso" value="@Model.fechaIngreso" readonly>
                    </div>
                    <div class="form-group">
                        <label>Fecha renuncia:</label>
                        <input type="text" class="form-control" name="fechaRenuncia" value="@Model.fechaRenuncia" readonly>
                    </div>
                    <div class="form-group">
                        <label>Tipo contrato:</label>
                        <input type="text" class="form-control" name="tipoContrato" value="@Model.tipoContrato" readonly>
                    </div>
                    <div class="form-group">
                        <label>Fecha emisión:</label>
                        <input type="text" class="form-control" name="fechaEmision" value="@Model.fechaEmision" readonly>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div>
                <div>
                    <div>
                        <hr />
                    </div>
                    <div>
                        <button class="btn btn-success">  <i class="fas fa-file-pdf"></i> Generar documento de indemnización </button>
                      
                    </div>
                <hr />
            </div>
        </div>

        <a href="@Url.Action("MostrarDatosCompletos", "DatosCompletos")" class="btn btn-primary">Volver a la lista reporte</a>
    </div>
</form>

